<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/about_us_bg"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mainRL"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/about_us_logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_blue">

        <LinearLayout
            android:id="@+id/ll_logos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_follow_us"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:src="@drawable/about_us_fb" />

            <ImageView
                android:id="@+id/iv_insta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:src="@drawable/about_us_insta" />

            <ImageView
                android:id="@+id/iv_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:src="@drawable/about_us_twitter" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_follow_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_query"
            android:layout_centerHorizontal="true"
            android:text="Follow us on:"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="2dp"
            android:textColor="@android:color/white"
            android:textColorHighlight="#ffcc00"
            android:textColorLink="#ffcc00"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mainRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/white">

        <RelativeLayout
            android:id="@+id/rl_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@android:color/white"
            android:visibility="visible">

            <TextView
                android:id="@+id/feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:padding="12dp"
                android:text="Feedback"
                android:textColor="#000022"
                android:textSize="16sp" />


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="18dp"
                android:padding="4dp"
                android:src="@drawable/about_arrow" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_below="@+id/rl_feedback"
            android:background="#000022"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_rateus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_feedback"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@android:color/white"
            android:visibility="visible">

            <TextView
                android:id="@+id/rateus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:padding="12dp"
                android:text="Rate Us"
                android:textColor="#000022"
                android:textSize="16sp" />


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="18dp"
                android:padding="4dp"
                android:src="@drawable/about_arrow" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_rateus"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_below="@+id/rl_rateus"
            android:background="#000022"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_rateus"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:padding="12dp"
                android:text="Official Website"
                android:textColor="#000022"
                android:textSize="16sp" />


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="18dp"
                android:padding="4dp"
                android:src="@drawable/about_arrow" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_website"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_below="@+id/rl_website"
            android:background="#000022"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_our_apps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_website"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/all_apps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:padding="12dp"
                android:text="Our All Apps"
                android:textColor="#000022"
                android:textSize="16sp" />


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="18dp"
                android:padding="4dp"
                android:src="@drawable/about_arrow" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_our_apps"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_below="@+id/rl_our_apps"
            android:background="#000022"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_terms_of_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_our_apps"
            android:layout_marginTop="1dp"

            android:layout_marginBottom="1dp"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/term_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:padding="12dp"
                android:text="Terms of Service"
                android:textColor="#000022"
                android:textSize="16sp" />


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="18dp"
                android:padding="4dp"
                android:src="@drawable/about_arrow" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_terms_of_service"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_below="@+id/rl_terms_of_service"
            android:background="#000022"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_terms_of_service"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:padding="12dp"
                android:text="Privacy Policy"
                android:textColor="#000022"
                android:textSize="16sp" />


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="18dp"
                android:padding="4dp"
                android:src="@drawable/about_arrow" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_Privacy_Policy"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_below="@+id/rl_privacy_policy"
            android:background="#000022"
            android:visibility="gone" />


        <RelativeLayout
            android:id="@+id/rl_version_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_Privacy_Policy"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:padding="12dp"
                android:text="@string/app_name"
                android:textColor="#000022"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_appversion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="18dp"
                android:padding="4dp" />


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="18dp"
                android:padding="4dp"
                android:src="@drawable/about_arrow"
                android:visibility="gone" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_Version_Name"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_below="@+id/rl_version_number"
            android:background="#000022"
            android:visibility="gone" />


    </RelativeLayout>


</RelativeLayout>
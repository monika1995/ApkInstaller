<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.formats.UnifiedNativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="0dp"
        android:background="@color/native_med_bg_grid"
        android:minHeight="80dp"
        android:padding="0dp">


        <TextView
            android:id="@+id/img_missed"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:text="Ad"
            android:textColor="@color/native_med_text_color_grid"
            android:textSize="13sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/contentad_logo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:layout_marginRight="10dp"
            android:gravity="bottom"
            android:visibility="gone"
            android:layout_marginEnd="10dp" />

        <ImageView
            android:id="@+id/contentad_image"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@id/img_missed"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:maxHeight="120dp" />


        <LinearLayout
            android:id="@+id/lintext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contentad_image"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contentad_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:text="Header Text"
                android:textColor="@color/native_med_text_color_grid"
                android:textSize="11dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contentad_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:text="Subtext"
                android:textColor="@color/native_med_text_color_grid"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/contentad_advertiser"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:textColor="@color/native_med_text_color_grid"
                android:textSize="14sp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lincall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lintext"
            android:layout_alignParentBottom="true"
            android:gravity="center">

            <Button
                android:id="@+id/contentad_call_to_action"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/native_med_button_color_grid"
                android:gravity="center"
                android:text="Download"
                android:textColor="@color/native_med_button_text_color_grid"
                android:textSize="11dp"
                android:textStyle="bold"
                android:visibility="visible" />
        </LinearLayout>


    </RelativeLayout>


</com.google.android.gms.ads.formats.UnifiedNativeAdView>